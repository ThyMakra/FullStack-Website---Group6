generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model RecipeTest {
  id Int @id @default(autoincrement())
  name String
  description String?
  createdAt DateTime @default(now())
  updatedAt DateTime?
}

model Recipe {
  id Int @id @default(autoincrement())
  name String
  description String?
  // duration_second Int
  // instruction String?
  // imageLink String
  // videoLink String?
  createdAt DateTime @default(now())
  updatedAt DateTime?
  categories RecipesCategoriesPivot[]
}

model RecipeCategory {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime?
  name String
  description String?
  recipes RecipesCategoriesPivot[]
}

model RecipesCategoriesPivot {
  recipe Recipe  @relation(fields: [recipeId], references: [id])
  recipeId Int
  recipeCategory RecipeCategory  @relation(fields: [recipeCategoryId], references: [id])
  recipeCategoryId Int
  assignedAt DateTime @default(now())
  assignedBy String

  @@id([recipeId, recipeCategoryId])
}
